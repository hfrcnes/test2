    <name>GDH_DATA_V1</name>
	<description>GDH model for space data</description>
	<version>v7.0</version>
	<!-- Correspond Ã  un type Feature au sens STAC -->
	<type>DATA</type>

	<attribute optional="false">
		<label>Version</label>
		<name>versionInfo</name>
		<type>STRING</type>
		<property key="dt_element" value="owl:versionInfo" />
	</attribute>
	<attribute optional="false" indexed="true">
		<label>Data type</label>
		<name>dataType</name>
		<type>STRING</type>
	</attribute>
    <!-- STAC temporal properties -->
	<attribute indexed="true">
		<label>DateTime</label>
		<name>date</name>
		<type>DATE_ISO8601</type>
	</attribute>
	<attribute optional="true">
		<label>Project name</label>
		<name>project</name>
		<type>STRING</type>
	</attribute>
	<attribute optional="true" indexed="true">
		<label>Links</label>
		<name>links</name>
		<type>STRING</type>
	</attribute>		
	<attribute optional="true">
		<label>Relationship</label>
		<name>qualifiedRelation</name>
		<description>Links to be added to item ones</description>
		<type>JSON</type>
		<restriction>
			<json_schema>
				<![CDATA[{
					"$schema": "http://json-schema.org/draft-07/schema#",
					"$id": "https://schemas.stacspec.org/v1.0.0/item-spec/json-schema/links.json#",
					"title": "Links",
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"rel",
							"href"
						],
						"properties": {
							"href": {
								"title": "Link reference",
								"type": "string",
								"format": "iri-reference",
								"minLength": 1
							},
							"rel": {
								"title": "Link relation type",
								"type": "string",
								"minLength": 1
							},
							"type": {
								"title": "Link type",
								"type": "string"
							},
							"title": {
								"title": "Link title",
								"type": "string"
							}
						}
					}
				}]]>
			</json_schema>
		</restriction>
		<property key="dt_element" value="dcat:qualifiedRelation" />
	</attribute>
    <attribute optional="true" indexed="true">
        <label>Product Validity</label>
        <name>productValidity</name>
